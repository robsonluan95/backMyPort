generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Technology {
  id   String @id @default(uuid())
  name String

  banner String

  projects  Project[] @relation("ProjectTechnologies")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("technologies")
}

model Project {
  id          String  @id @default(uuid())
  name        String
  startYear   Int
  endYear     Int
  typeProject String
  mobile      Boolean
  location    String
  github      String
  site        String
  figma       String
  description String

  bannerWeb    String
  bannerMobile String

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  technologies Technology[] @relation("ProjectTechnologies")

  @@map("projects")
}
